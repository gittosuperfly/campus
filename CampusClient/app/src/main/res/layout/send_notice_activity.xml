<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical"
    tools:context=".features.group.notice.SendNoticeActivity">

    <RelativeLayout
        android:id="@+id/groupTopBar"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@color/white"
        android:elevation="2dp">

        <RelativeLayout
            android:id="@+id/backBtn"
            android:layout_width="60dp"
            android:layout_height="50dp">

            <ImageView
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:layout_centerVertical="true"
                android:layout_marginStart="15dp"
                android:src="@drawable/ic_back" />
        </RelativeLayout>

        <TextView
            android:id="@+id/groupNameTv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:includeFontPadding="false"
            android:text="发送群通知"
            android:textColor="@color/text_blank_1"
            android:textSize="18sp" />
    </RelativeLayout>


    <EditText
        android:id="@+id/noticeEdit"
        android:layout_width="match_parent"
        android:layout_height="300dp"
        android:layout_marginHorizontal="15dp"
        android:layout_marginTop="20dp"
        android:background="@drawable/shape_group_notice_input"
        android:gravity="top"
        android:hint="说点什么吧..."
        android:minLines="5"
        android:padding="@dimen/dp_10"
        android:textColor="@color/text_blank_1"
        android:textColorHint="@color/input_hint"
        android:textSize="16sp" />

    <Button
        android:id="@+id/submitBtn"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginHorizontal="15dp"
        android:layout_marginTop="20dp"
        android:background="@drawable/shape_btn"
        android:text="发送通知"
        android:textColor="@color/white"
        android:textSize="16sp" />

</LinearLayout>