<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.cai.campus.server.dao.UserGroupRelationDao">

    <resultMap type="com.cai.campus.server.entity.UserGroupRelation" id="UserGroupRelationMap">
        <result property="uid" column="uid" jdbcType="INTEGER"/>
        <result property="groupId" column="group_id" jdbcType="INTEGER"/>
        <result property="status" column="status" jdbcType="INTEGER"/>
    </resultMap>

    <!--查询单个-->
    <select id="queryById" resultMap="UserGroupRelationMap">
        select
          uid, group_id, status
        from campus.user_group_relation
        where uid = #{uid}
    </select>

    <!--查询指定行数据-->
    <select id="queryAllByLimit" resultMap="UserGroupRelationMap">
        select
          uid, group_id, status
        from campus.user_group_relation
        limit #{offset}, #{limit}
    </select>

    <!--通过实体作为筛选条件查询-->
    <select id="queryAll" resultMap="UserGroupRelationMap">
        select
          uid, group_id, status
        from campus.user_group_relation
        <where>
            <if test="uid != null">
                and uid = #{uid}
            </if>
            <if test="groupId != null">
                and group_id = #{groupId}
            </if>
            <if test="status != null">
                and status = #{status}
            </if>
        </where>
    </select>

    <!--新增所有列-->
    <insert id="insert" keyProperty="uid" useGeneratedKeys="true">
        insert into campus.user_group_relation(group_id, status)
        values (#{groupId}, #{status})
    </insert>

    <!--通过主键修改数据-->
    <update id="update">
        update campus.user_group_relation
        <set>
            <if test="groupId != null">
                group_id = #{groupId},
            </if>
            <if test="status != null">
                status = #{status},
            </if>
        </set>
        where uid = #{uid}
    </update>

    <!--通过主键删除-->
    <delete id="deleteById">
        delete from campus.user_group_relation where uid = #{uid}
    </delete>

</mapper>