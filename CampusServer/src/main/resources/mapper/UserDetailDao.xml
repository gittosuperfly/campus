<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.cai.campus.server.dao.UserDetailDao">

    <resultMap type="com.cai.campus.server.entity.UserDetail" id="UserDetailMap">
        <result property="uid" column="uid" jdbcType="INTEGER"/>
        <result property="name" column="name" jdbcType="VARCHAR"/>
        <result property="sex" column="sex" jdbcType="INTEGER"/>
        <result property="logo" column="logo" jdbcType="VARCHAR"/>
        <result property="birthday" column="birthday" jdbcType="INTEGER"/>
        <result property="introduction" column="introduction" jdbcType="VARCHAR"/>
        <result property="email" column="email" jdbcType="VARCHAR"/>
    </resultMap>

    <!--查询单个-->
    <select id="queryById" resultMap="UserDetailMap">
        select
          uid, name, sex, logo, birthday, introduction, email
        from campus.user_detail
        where uid = #{uid}
    </select>

    <!--查询指定行数据-->
    <select id="queryAllByLimit" resultMap="UserDetailMap">
        select
          uid, name, sex, logo, birthday, introduction, email
        from campus.user_detail
        limit #{offset}, #{limit}
    </select>

    <!--通过实体作为筛选条件查询-->
    <select id="queryAll" resultMap="UserDetailMap">
        select
          uid, name, sex, logo, birthday, introduction, email
        from campus.user_detail
        <where>
            <if test="uid != null">
                and uid = #{uid}
            </if>
            <if test="name != null and name != ''">
                and name = #{name}
            </if>
            <if test="sex != null">
                and sex = #{sex}
            </if>
            <if test="logo != null and logo != ''">
                and logo = #{logo}
            </if>
            <if test="birthday != null">
                and birthday = #{birthday}
            </if>
            <if test="introduction != null and introduction != ''">
                and introduction = #{introduction}
            </if>
            <if test="email != null and email != ''">
                and email = #{email}
            </if>
        </where>
    </select>

    <!--新增所有列-->
    <insert id="insert" keyProperty="uid" useGeneratedKeys="true">
        insert into campus.user_detail(name, sex, logo, birthday, introduction, email)
        values (#{name}, #{sex}, #{logo}, #{birthday}, #{introduction}, #{email})
    </insert>

    <!--通过主键修改数据-->
    <update id="update">
        update campus.user_detail
        <set>
            <if test="name != null and name != ''">
                name = #{name},
            </if>
            <if test="sex != null">
                sex = #{sex},
            </if>
            <if test="logo != null and logo != ''">
                logo = #{logo},
            </if>
            <if test="birthday != null">
                birthday = #{birthday},
            </if>
            <if test="introduction != null and introduction != ''">
                introduction = #{introduction},
            </if>
            <if test="email != null and email != ''">
                email = #{email},
            </if>
        </set>
        where uid = #{uid}
    </update>

    <!--通过主键删除-->
    <delete id="deleteById">
        delete from campus.user_detail where uid = #{uid}
    </delete>

</mapper>