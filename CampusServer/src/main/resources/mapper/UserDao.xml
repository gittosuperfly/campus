<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.cai.campus.dao.UserDao">

    <resultMap type="com.cai.campus.entity.User" id="UserMap">
        <result property="uid" column="uid" jdbcType="INTEGER"/>
        <result property="phone" column="phone" jdbcType="VARCHAR"/>
        <result property="password" column="password" jdbcType="VARCHAR"/>
        <result property="name" column="name" jdbcType="VARCHAR"/>
    </resultMap>

    <!--查询id-->
    <select id="queryById" resultMap="UserMap">
        select
          uid, phone, password, name
        from campus.user
        where uid = #{uid}
    </select>

    <!--查询电话-->
    <select id="queryByPhone" resultMap="UserMap">
        select
          uid, phone, password, name
        from campus.user
        where phone = #{phone}
    </select>

    <!--查询指定行数据-->
    <select id="queryAllByLimit" resultMap="UserMap">
        select
          uid, phone, password, name
        from campus.user
        limit #{offset}, #{limit}
    </select>

    <!--通过实体作为筛选条件查询-->
    <select id="queryAll" resultMap="UserMap">
        select
          uid, phone, password, name
        from campus.user
        <where>
            <if test="uid != null">
                and uid = #{uid}
            </if>
            <if test="phone != null and phone != ''">
                and phone = #{phone}
            </if>
            <if test="password != null and password != ''">
                and password = #{password}
            </if>
            <if test="name != null and name != ''">
                and name = #{name}
            </if>
        </where>
    </select>

    <!--新增所有列-->
    <insert id="insert" keyProperty="uid" useGeneratedKeys="true">
        insert into campus.user(phone, password, name)
        values (#{phone}, #{password}, #{name})
    </insert>

    <!--通过主键修改数据-->
    <update id="update">
        update campus.user
        <set>
            <if test="phone != null and phone != ''">
                phone = #{phone},
            </if>
            <if test="password != null and password != ''">
                password = #{password},
            </if>
            <if test="name != null and name != ''">
                name = #{name},
            </if>
        </set>
        where uid = #{uid}
    </update>

    <!--通过主键删除-->
    <delete id="deleteById">
        delete from campus.user where uid = #{uid}
    </delete>

</mapper>